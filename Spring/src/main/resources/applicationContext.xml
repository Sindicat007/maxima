<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="bankPaymentService" class="spring.service.BankPaymentService"/>
    <bean id="payPalPaymentService" class="spring.service.PayPalPaymentService"/>


    <bean id="paymentService" class="spring.PaymentProcessor">
        <property name="paymentService" ref="payPalPaymentService"/>
    </bean>
</beans>